public class ViewStatus extends javax.swing.JFrame {

    /**
     * Creates new form ViewStatus
     */
    public ViewStatus() {
        initComponents();
        
        ArduinoSerial arduino = new ArduinoSerial("COM3");
        
        Thread t = new Thread(){
            @Override
            public void run(){
                
                arduino.initialize();
                while(true){
                    lbStatus.setText(arduino.read());
                    if(arduino.read() != null && arduino.read().equals("1")){
                         StatusDAO dao = new StatusDAO();
                         Status stt = new Status();
                         
                         stt.setStatus(arduino.read());
                         dao.save(stt);
                         
                         arduino.sleep(30000);
                    }
                }
            }
        };
        
        /*
        SerialTest arduino = new SerialTest();
        
        Thread t = new Thread(){
            @Override
            public void run(){
                
                arduino.initialize();
                while(true){
                    lbStatus.setText(arduino.read());
                }
            }
        };*/
        
        t.start();
        
    }

